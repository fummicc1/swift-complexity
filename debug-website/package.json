{
  "name": "swift-complexity-debug-website",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && swift run App serve --hostname 0.0.0.0 --port 8080",
    "build:frontend": "cd frontend && npm run build",
    "build:worker": "cd frontend && npm run build:worker",
    "build:backend": "docker build -f backend/Dockerfile -t swift-complexity-backend ../../",
    "build": "npm run build:worker",
    "deploy": "npm run build && wrangler deploy --config wrangler.jsonc",
    "deploy:production": "npm run build && wrangler deploy --config wrangler.jsonc --env production",
    "clean": "rm -rf frontend/.next frontend/.open-next frontend/node_modules backend/.build"
  },
  "dependencies": {
    "@cloudflare/containers": "^0.0.30",
    "@opennextjs/cloudflare": "^1.12.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "wrangler": "^4.47.0"
  },
  "workspaces": [
    "frontend"
  ]
}
